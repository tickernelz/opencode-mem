{
  "name": "opencode-mem",
  "version": "0.2.0",
  "description": "OpenCode plugin that gives coding agents persistent memory using local vector database",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "opencode-mem": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun build ./src/cli.ts --outfile ./dist/cli.js --target node && tsc --emitDeclarationOnly",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "opencode",
    "plugin",
    "memory",
    "vector-database",
    "ai",
    "coding-agent",
    "local",
    "standalone"
  ],
  "author": "opencode-mem",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tickernelz/opencode-mem"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.162",
    "@lancedb/lancedb": "^0.23.0",
    "@xenova/transformers": "^2.17.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  },
  "opencode": {
    "type": "plugin",
    "hooks": [
      "chat.message",
      "event"
    ]
  },
  "files": [
    "dist"
  ]
}
